{
    "python.pythonPath": "venv/bin/python",
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django",
        "--errors-only",
    ],
    "files.associations": {
        "**/templates/*.html": "django-html",
        "**/templates/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "emmet.includeLanguages": { 
        "django-html": "html" 
    },
}